
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is authenticated.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Admins are any authenticated user. They can read and list everything,
    // and write to all collections except 'orders' (which are created by anyone).
    match /{document=**} {
      allow read, list: if isAuthenticated();
    }
    
    // All other collections not specified below can be written to by an admin.
    match /{path=**}/{-not-in=['orders']}/{doc} {
        allow write: if isAuthenticated();
    }

    // Public read access for collections needed by non-logged-in users.
    match /products/{productId} {
      allow read: if true;
    }
    match /coaches/{coachId} {
      allow read: if true;
    }
    match /settings/{settingId} {
      allow read: if true;
    }
     match /shippingOptions/{optionId} {
      allow read: if true;
    }

    // Anyone can create orders (place an order).
    match /orders/{orderId} {
      allow create: if true;
    }
    
    // Anyone can submit applications.
    match /coachingApplications/{applicationId} {
        allow create: if true;
    }
    
    // Anyone can check their membership status.
    match /memberships/{membershipId} {
        allow read: if true;
    }
  }
}
