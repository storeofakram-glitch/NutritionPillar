rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Any authenticated user is an admin
    function isAdmin() {
      return request.auth != null;
    }

    // Rules for collections that require public read access
    match /products/{productId} {
      allow list, read: if true;
      allow write: if isAdmin();
    }

    match /coaches/{coachId} {
      allow list, read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /shippingOptions/{optionId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rules for collections that allow public creation
    match /orders/{orderId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }
    
    match /coachingApplications/{applicationId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }
    
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, list, update, delete: if isAdmin();
    }

    // All other collections are admin-only
    match /memberships/{membershipId} {
      allow read, list, write: if isAdmin();
    }
    
    match /expenses/{expenseId} {
      allow read, list, write: if isAdmin();
    }
    
    match /counters/{counterId} {
      allow read, list, write: if isAdmin();
    }
  }
}
