rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated.
    function isAuth() {
      return request.auth != null;
    }

    // Admins (any authenticated user) can read and list all data,
    // and write to any collection.
    match /{document=**} {
      allow read, list, write: if isAuth();
    }

    // Public read access for collections needed by non-authenticated users.
    match /products/{productId} {
      allow get, list: if true;
    }

    match /coaches/{coachId} {
      allow get, list: if true;
    }

    match /settings/{settingId} {
      allow get, list: if true;
    }

    match /shippingOptions/{optionId} {
      allow get, list: if true;
    }

    // Allow anyone to create orders and coaching applications.
    match /orders/{orderId} {
      allow create: if true;
    }

    match /coachingApplications/{applicationId} {
        allow create: if true;
    }
  }
}